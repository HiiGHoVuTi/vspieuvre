{
  "scopeName": "source.pieuvre",
  "patterns": [
    {
      "name": "comment.block.pieuvre",
      "begin": "\\(\\*",
      "end": "\\*\\)",
      "patterns": [
        {
          "name": "punctuation.definition.comment.pieuvre",
          "match": "\\(\\*|\\*\\)"
        }
      ]
    },
    {
      "name": "keyword.control.pieuvre",
      "match": "\\b(Theorem|Proposition|Lemma|Proof|Qed|Definition|Fixpoint|Variable|Axiom|Parameter|Hypothesis|Goal|Example|Print|Check|Undo)\\b"
    },
    {
      "name": "keyword.type.pieuvre",
      "match": "\\b(Type|Set|Prop|nat|bool|list|option|forall|exists|\\~|not|and|or)\\b"
    },
    {
      "name": "constant.numeric.pieuvre",
      "match": "\\b\\d+\\b"
    },
    {
      "name": "storage.type.pieuvre",
      "match": "\\b(Inductive)\\b"
    },
    {
      "name": "support.function.pieuvre",
      "match": "\\b(apply|auto|rewrite|simpl|reflexivity|intro|intros|destruct|induction|case|exact|elim|inversion|compute|assumption|cut|try|fail|assert|idtac|unfold|pattern)\\b"
    },
    {
      "name": "keyword.operator.pieuvre",
      "match": "\\b(fun|match|with|end|in|let|if|then|else|fix|as|return)\\b"
    },
    {
      "name": "keyword.operator.pieuvre",
      "match": "=>|:="
    }
  ]
}
