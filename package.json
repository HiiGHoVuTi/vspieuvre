{
  "name": "vspieuvre",
  "displayName": "VSPieuvre",
  "description": "une extension amicale pour pieuvre",
  "version": "0.0.1",
  "author": "Juliette PONSONNET <juliette.ponsonnet@ens-lyon.fr>",
  "repository": {
    "type": "git",
    "url": "https://github.com/HiiGHoVuTi/vspieuvre.git"
  },
  "engines": {
    "vscode": "^1.88.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:pieuvre",
    "onCommand:vspieuvre.showProofPanel",
    "onCommand:extension.goToDefinition",
    "onCommand:extension.hoverInformation"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "VSPieuvre Configuration",
        "properties": {
          "vspieuvre.pieuvre Binary.Path": {
            "type": "string",
            "description": "Path to the pieuvre executable"
          },
          "vspieuvre.pieuvre Binary.Flags": {
            "type": "string",
            "description": "Flags for the pieuvre executable"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "vspieuvre.showProofPanel",
        "title": "Show Proof Panel",
        "category": "Pieuvre"
      },
      {
        "command": "vspieuvre.stepForward",
        "title": "Pieuvre: Step Forward",
        "category": "Pieuvre"
      },
      {
        "command": "vspieuvre.stepBack",
        "title": "Pieuvre: Step Back",
        "category": "Pieuvre"
      }
    ],
    "views": {
        "explorer": [
            {
                "id": "vspieuvre.proofView",
                "name": "Proof State"
            }
        ]
    },
    "keybindings": [
      {
        "command": "vspieuvre.stepForward",
        "key": "ctrl+alt+right",
        "mac": "cmd+alt+right",
        "when": "editorLangId == pieuvre"
      },
      {
        "command": "vspieuvre.stepBack",
        "key": "ctrl+alt+left",
        "mac": "cmd+alt+left",
        "when": "editorLangId == pieuvre"
      }
    ],
    "languages": [{
      "id": "pieuvre",
      "aliases": ["Pieuvre"],
      "extensions": [".pvr", ".8pus", ".lam"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "pieuvre",
      "scopeName": "source.pieuvre",
      "path": "./syntaxes/pieuvre.tmLanguage.json"
    }]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.88.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
